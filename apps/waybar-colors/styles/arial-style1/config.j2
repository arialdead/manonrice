
/* ====== Global (templated) ====== */
* {
  font-family: "{{ font_family | default('JetBrains Mono') }}", monospace;
  font-size: {{ font_size | default(12) }}px;
}

window#waybar {
  background-color: transparent;
  border-bottom: 0;
  color: {{ foreground }};
  padding-top: 80px;
  margin: 4px;
  border-radius: 3px;
}

window#waybar.hidden { opacity: 0.2; }

/* ====== Boutons génériques ====== */
button {
  box-shadow: inset 0 -3px transparent;
  border: none;
  border-radius: 3px;
}

/* Hover générique (comme ton exemple template) */
button:hover {
  background: none;
  text-shadow:none;
  box-shadow: none;
  transition: none;
}

/* ====== Modules: fond individuel + arrondi + (largeurs) ====== */
/* Liste des modules (ajoute/retire selon ta config) */
#clock,
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#network,
#pulseaudio,
#pulseaudio-slider,
#wireplumber,
#custom-media,
#tray,
#cava,
#mode,
#idle_inhibitor,
#scratchpad,
#custom-cava,
#power-profiles-daemon,
#custom-power,
#mpris,
#workspaces {
  background-color: rgba(
    {{ background[1:3] | int(base=16) }},
    {{ background[3:5] | int(base=16) }},
    {{ background[5:7] | int(base=16) }},
    {{ module_bg_alpha | default(0.60) }}
  );
  color: {{ foreground }};
  border-radius: 3px;
  margin: 2px 0px;
  padding: 2px 10px;
}

/* Largeur fixe (ex: réseau) */
#network { min-width: {{ network_min_width | default(200) }}px; }

/* Workspaces conteneur */
#workspaces {
  padding: 0 0;
  min-width: {{ workspaces_min_width | default(160) }}px;
}

/* Workspaces urgent (tu n’avais que cet état) */
#workspaces button.urgent {
  background-color: #eb4d4b;
}

#workspaces button {
  color: {{ foreground }};
}

/* Taskbar intégrée (active + hover) */
#workspaces .taskbar-window.active {
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 6px;
  padding-left: 2px;
  padding-right: 2px;
}

/* ====== Pulseaudio hover (exemple template “update instant”) ====== */
#pulseaudio:hover {
  background-color: rgba(
    {{ background[1:3] | int(base=16) }},
    {{ background[3:5] | int(base=16) }},
    {{ background[5:7] | int(base=16) }},
    0.7
  );
  border-radius: 3px;
}

/* ====== Pulseaudio slider ====== */
#pulseaudio-slider {
  padding: 0;
  padding-right: 40px;
  margin: 0;
  background-color: rgba(
    {{ background[1:3] | int(base=16) }},
    {{ background[3:5] | int(base=16) }},
    {{ background[5:7] | int(base=16) }},
    0.20
  );
  border-radius: 20px;
  min-width: 160px;
}

#pulseaudio-slider slider {
  min-height: 0px;
  min-width: 0px;
  opacity: 0;
  background-color: white;
  background-image: none;
  border: none;
  box-shadow: none;
}

#pulseaudio-slider trough {
  min-height: 10px;
  min-width: 100px;
  border-radius: 6px;
  background-color: rgba(0, 0, 0, 1);
}

#pulseaudio-slider highlight {
  min-width: 10px;
  border-radius: 6px;
  background-color: rgba(0, 128, 0, 0.8);
}

/* ====== Menu contextuel ====== */
.GtkMenuItem {
  background-color: rgba(
    {{ background[1:3] | int(base=16) }},
    {{ background[3:5] | int(base=16) }},
    {{ background[5:7] | int(base=16) }},
    0.6
  );
}

/* ====== Cava custom ====== */
#custom-cava {
  border-left: 0;
  border-right: 0;
  padding-bottom: 6px;
  font-family: "bargraph";
  font-size: 16px;
  color: #ffffff;
}

/* ====== Mode (ex: resize) ====== */
#mode {
  box-shadow: inset 0 -3px #ffffff;
  font-weight: bold;
}

/* ====== Battery styles (comme dans ton exemple template) ====== */
#battery {
  background-color: #ffffff;
  color: #000000;
}

#battery.charging,
#battery.plugged {
  color: #ffffff;
  background-color: #26A65B;
}

@keyframes blink {
  to { background-color: #ffffff; color: #000000; }
}

#battery.critical:not(.charging) {
  background-color: #f53c3c;
  color: #ffffff;
  animation-name: blink;
  animation-duration: 0.5s;
  animation-timing-function: steps(12);
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

/* ====== Keyboard-state (depuis ton exemple template) ====== */
#keyboard-state {
  background: #97e1ad;
  color: #000000;
  padding: 0 0px;
  margin: 0 5px;
  min-width: 16px;
}
#keyboard-state > label { padding: 0 5px; }
#keyboard-state > label.locked { background: rgba(0, 0, 0, 0.2); }

/* ====== Scratchpad ====== */
#scratchpad { background: rgba(0, 0, 0, 0.2); }
#scratchpad.empty { background-color: transparent; }

/* ====== Privacy (exemple template) ====== */
#privacy { padding: 0; }
#privacy-item { padding: 0 5px; color: white; }
#privacy-item.screenshare { background-color: #cf5700; }
#privacy-item.audio-in    { background-color: #1ca000; }
#privacy-item.audio-out   { background-color: #0069d4; }

/* ====== Alignements périphériques (comme ton exemple) ====== */
#window, #workspaces { margin: 0 4px; }
.modules-left  > widget:first-child > #workspaces { margin-left: 0; }
.modules-right > widget:last-child  > #workspaces { margin-right: 0; }

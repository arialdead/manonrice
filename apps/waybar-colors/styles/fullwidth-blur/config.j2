* {
    /* `otf-font-awesome` is required to be installed for icons */
    font-family: "JetBrains Mono";
    font-size: 12px;
}

window#waybar {
    background-color: rgba({{ background[1:3]|int(base=16) }},
                {{ background[3:5]|int(base=16) }},
                {{ background[5:7]|int(base=16) }},
                0.6);
    border-bottom: 0px;
    color: {{foreground}};
    padding-top: 80px;
    margin-bottom: 0px;
    border-radius : 10px;
}

window#waybar.hidden {
    opacity: 0.2;
}

#pulseaudio-slider {
    padding: 0;
    padding-right: 40px;
    margin: 0;
}
#pulseaudio-slider slider {
    min-height: 0px;
    min-width: 0px;
    opacity: 0;
    background-color: white;
    background-image: none;
    border: none;
    box-shadow: none;
}
#pulseaudio-slider trough {
    min-height: 10px;
    min-width: 80px;
    border-radius: 5px;
    background-color: rgba({{ foreground[1:3]|int(base=255) }},
                {{ foreground[3:5]|int(base=255) }},
                {{ foreground[5:7]|int(base=255) }},
                255);
}
#pulseaudio-slider highlight {
    min-width: 10px;
    border-radius: 5px;
    background-color: rgba(0, 128, 0, 0);
}

button:hover {
  box-shadow: none; /* Remove predefined box-shadow */
  text-shadow: none; /* Remove predefined text-shadow */
  background: none; /* Remove predefined background color (white) */
  transition: none; /* Disable predefined animations */
}

#workspaces button {
    padding: 2px 2px 5px 2px;
    margin-right : 5px;
    margin-top: 2px;
    margin-bottom: 2px;
    background-color: rgba(0,0,0,0.1);
    color: #ffffff;
}

#workspaces button:hover {
    background: rgba(0, 0, 0, 0.2);
}

#workspaces button.focused {
    background-color: #64727D;
    box-shadow: inset 0 -3px #ffffff;
}

#workspaces button.urgent {
    background-color: #eb4d4b;
}

#mode {
    background-color: #64727D;
    box-shadow: inset 0 -3px #ffffff;
}

#clock,
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#network,
#pulseaudio,
#pulseaudio-slider,
#wireplumber,
#custom-media,
#tray,
#cava,
#mode,
#idle_inhibitor,
#scratchpad,
#custom-cava,
#power-profiles-daemon,
#custom-power,
#mpris {
    padding: 2px 2px;
    margin : 2px;
    color: {{foreground}};
    background: none;
}

#clock {
    margin-left: 5px;
}

#custom-cava {
    border-left: 0px;
    border-right: 0px;
    padding-bottom: 6px;
    font-family: "bargraph";
    font-size: 16px;
}


#custom-power {
    font-size: 18px;
}

.GtkMenuItem {
    background-color: rgba({{ background[1:3]|int(base=16) }},
                {{ background[3:5]|int(base=16) }},
                {{ background[5:7]|int(base=16) }},
                0.6);
}

#workspaces { 
    border-top: 2px solid transparent;
    border-bottom: 2px solid transparent;
}

#workspaces .taskbar-window {
    padding-left: 4px;
    padding-right: 4px;
    border-radius: 20px;
}

#workspaces .taskbar-window.active {
    background-color: rgba(255,255,255, 0.15);
}
#workspaces .taskbar-window:hover {
    background-color: rgba(255,255,255, 0.40);
}

